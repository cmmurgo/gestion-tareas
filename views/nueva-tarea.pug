// views/nueva-tarea.pug
doctype html
html
  head
    title Agregar Nueva Tarea
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css")
  body
    .container.mt-5
      h1 Agregar Nueva Tarea

      form(action="/api/tareas" method="post")
        .mb-3
          label(for="id") ID
          input(type="number" name="id" id="id" class="form-control" placeholder="ID de la tarea" required)

        .mb-3
          label(for="tarea") Tarea
          input(type="text" name="tarea" id="tarea" class="form-control" placeholder="Nombre de la tarea" required)

        .mb-3
          label(for="usuario") Usuario Asignado
          input(type="text" name="usuario" id="usuario" class="form-control" placeholder="Nombre del usuario" required)

        .mb-3
          label(for="area") Área
          select(name="area" id="area" class="form-control" required)
            option(value="Compras") Compras
            option(value="Ventas") Ventas
            option(value="Producción") Producción
            option(value="Inventario") Inventario

        .mb-3
          label(for="estado") Estado
          select(name="estado" id="estado" class="form-control" required)
            option(value="Pendiente") Pendiente
            option(value="En progreso") En progreso
            option(value="Completada") Completada

        .mb-3
          label(for="prioridad") Prioridad
          select(name="prioridad" id="prioridad" class="form-control" required)
            option(value="Baja") Baja
            option(value="Media") Media
            option(value="Alta") Alta

        .mb-3
          label(for="fechaVencimiento") Fecha de Vencimiento
          input(type="date" name="fechaVencimiento" id="fechaVencimiento" class="form-control" required)

        button(type="submit" class="btn btn-primary") Guardar Tarea

      p.mt-3
        a(href="/") Volver al Panel de Administración
