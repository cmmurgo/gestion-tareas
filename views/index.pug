doctype html
html
  head
    title Panel de Administración de Tareas
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css")
  body
    .container
      h1 Bienvenido al Panel de Administración de Tareas

      if usuario
        h3 Hola, #{usuario.username}!  // Muestra el nombre de usuario en la bienvenida
        p 
          a(href="/api/tareas") Ver Tareas
          | | 
          a(href="/logout") Cerrar Sesión

      else
        h3 No has iniciado sesión.
        p 
          a(href="/login") Iniciar Sesión

      hr
      h2 Lista de Tareas
      // Aquí podrías agregar lógica para mostrar las tareas desde tu base de datos
      // Ejemplo de un botón para agregar una nueva tarea
      a(href="/tareas/nueva" class="btn btn-primary") Agregar Nueva Tarea
